@model IEnumerable<Core.Caste>

@{
    ViewData["Title"] = "Касты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Касты</h1>

<p>
    <a asp-action="Create">Добавить касту</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Название
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    </tbody>
</table>